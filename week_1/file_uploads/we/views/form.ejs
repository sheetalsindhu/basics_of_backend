</style>

<body>
    <div class="cont">
        <form method="POST" action="/products/single" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input class="form-control" type="text" placeholder="Title" aria-label="Add title" name="title"
                    value="" />
            </div>

            <div class="mb-3 mt-4">
                <label class="form-label">Price</label>
                <input class="form-control" type="text" placeholder="Price" aria-label=" Add Price " name="price"
                    value="" />
            </div>

            <div class="mb-3 mt-4">
                <label for="formFile" class="form-label">Add file</label>
                <input class="form-control" type="file" id="formFile" name="productImages" value="" />
            </div>
            <button type="submit" class="btn btn-primary" value="save">
                Submit
            </button>
        </form>
    </div>
